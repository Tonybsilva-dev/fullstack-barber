generator client {
  provider       = "prisma-client-js"
  bindaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./fullstack-barber-ERD.svg"
  theme    = "forest"
}

